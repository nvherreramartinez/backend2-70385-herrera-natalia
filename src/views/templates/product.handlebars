<div class="container mt-5">
    <h1 class="text-center">Nuestros Productos</h1>
    <div class="row">
        {{#each products}}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><strong>Precio:</strong> ${{this.price}},00</p>
                    <p class="card-text"><strong>Stock:</strong> {{this.stock}} unidades</p>
                    <a href="/item/{{this._id}}" class="btn btn-dark w-100">Ver m√°s</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>